{
  "name": "@mrintel/villain-ui",
  "version": "0.3.0",
  "type": "module",
  "private": false,
  "description": "A luxury Svelte 5 component library with a distinctive dark aesthetic, built with TypeScript and Tailwind CSS v4",
  "author": "mrryzen",
  "license": "MIT",
  "homepage": "https://github.com/MrRyzen/villain-ui#readme",
  "bugs": {
    "url": "https://github.com/MrRyzen/villain-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrRyzen/villain-ui.git"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "ui",
    "components",
    "tailwind",
    "typescript",
    "luxury",
    "design-system"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./theme.css": {
      "default": "./dist/theme.css"
    },
    "./package.json": {
      "default": "./package.json"
    }
  },
  "sideEffects": [
    "./dist/theme.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && svelte-package -i src -o dist && npm run build:css",
    "build:css": "node build-css.mjs",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "check": "npm run type-check",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "svelte": "^5.45.2",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "nanoid": "^5.1.6"
  }
}
