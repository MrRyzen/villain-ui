{
  "name": "@mrintel/villain-ui",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "A luxury Svelte 5 component library with a distinctive dark aesthetic, built with TypeScript and Tailwind CSS v4",
  "author": "mrryzen",
  "license": "MIT",
  "homepage": "https://github.com/MrRyzen/villain-ui#readme",
  "bugs": {
    "url": "https://github.com/MrRyzen/villain-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrRyzen/villain-ui.git"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "ui",
    "components",
    "tailwind",
    "typescript",
    "luxury",
    "design-system"
  ],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./package.json": "./package.json"
  },

  "sideEffects": [
    "./dist/theme.css"
  ],

  "files": [
    "dist"
  ],

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build"
  },

  "peerDependencies": {
    "svelte": "^5.0.0"
  },

  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "postcss": "^8.5.6",
    "shiki": "^3.17.0",
    "svelte": "^5.45.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  },

  "dependencies": {
    "nanoid": "^5.1.6"
  }
}